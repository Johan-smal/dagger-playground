{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
			"@public/*": ["./public/*"],
			"@/*": ["./src/*"],
      "@bin/*": ["./bin/*"],
		}
  },
  "include": ["src", "bin", "tests", "public"],
}
